{
  "Version": "2012-10-17",
  "Id": "PublicReadAndPresignedUploadPolicy",
  "Statement": [
    {
      "Sid": "AllowRootFullAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::<YOUR-AWS-ACCOUNT-ID>:root"
      },
      "Action": "s3:*",
      "Resource": "arn:aws:s3:::<YOUR-BUCKET-NAME>/*"
    },
    {
      "Sid": "PublicRead",
      "Effect": "Allow",
      "Principal": "*",
      "Action": "s3:GetObject",
      "Resource": "arn:aws:s3:::<YOUR-BUCKET-NAME>/*"
    },
    {
      "Sid": "PresignedUrlOnly",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:PutObject",
      "Resource": "arn:aws:s3:::<YOUR-BUCKET-NAME>/*",
      "Condition": {
        "Null": {
          "aws:TokenIssueTime": "true"
        }
      }
    }
  ]
}
