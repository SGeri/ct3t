generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  clerk_id String  @unique
  email    String  @unique
  role     Role    @default(EMPLOYEE)
  name     String?
}

enum Role {
  EMPLOYEE
  MANAGER
  ADMIN
}
